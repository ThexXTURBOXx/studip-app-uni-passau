<resources>

    <style name="StudiPassauTheme" parent="Theme.AppCompat.DayNight">
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/pref_dependency_primary</item>
        <item name="android:textColorSecondary">@color/pref_dependency_secondary</item>
        <item name="actionBarStyle">@style/StudiPassauTheme.ActionBarStyle</item>
        <item name="actionBarTheme">@style/StudiPassauTheme.ActionBarTheme</item>
        <item name="actionMenuTextColor">@color/colorAppBarCompl</item>
        <item name="android:navigationBarColor">@color/colorBackground</item>
        <item name="iconPreferenceColor">#000000</item>
        <item name="android:windowBackground">@color/colorBackground</item>
    </style>

    <style name="StudiPassauTheme.ComplIcons" parent="StudiPassauTheme">
        <item name="iconPreferenceColor">@color/colorCompl</item>
    </style>

    <style name="StudiPassauTheme.ActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="titleTextStyle">@style/StudiPassauTheme.ActionBarStyle.TitleTextStyle
        </item>
        <item name="background">@color/colorPrimary</item>
    </style>

    <style name="StudiPassauTheme.ActionBarTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@color/colorAppBarCompl</item>
        <item name="android:textColorSecondary">@color/colorAppBarCompl</item>
        <item name="actionMenuTextColor">@color/colorAppBarCompl</item>
        <item name="colorControlNormal">@color/colorAppBarCompl</item>
    </style>

    <style name="StudiPassauTheme.ActionBarStyle.TitleTextStyle" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/colorAppBarCompl</item>
    </style>

    <style name="StudiPassauTheme.Calendar.Date" parent="TextAppearance.MaterialCalendarWidget.Date">
        <item name="android:textColor">@color/colorTextPrimary</item>
    </style>

    <style name="StudiPassauTheme.Calendar.Header" parent="TextAppearance.MaterialCalendarWidget.Header">
        <item name="android:textColor">@color/colorTextPrimary</item>
    </style>

    <style name="StudiPassauTheme.Calendar.WeekDay" parent="TextAppearance.MaterialCalendarWidget.WeekDay">
        <item name="android:textColor">@color/colorTextSecondary</item>
    </style>

</resources>
